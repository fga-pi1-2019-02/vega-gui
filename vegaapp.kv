<Manager>:
    Menu:
        name: 'menu'
    Preparer:
        name: 'preparer'
    Dashboard:
        name: 'dashboard'

<Menu>:
    BoxLayout:
        width: 1000
        orientation: 'vertical'
        padding: 100
        spacing: 50
        Image: 
            source: 'images/vegalogo.png'
            size_hint_y: None
            height: 200
        Label:
            text: 'Bem Vindo ao Software de Gerenciamento da Base de Lançamentos da Capital Rocket Team!'
        Button:
            text: 'Iniciar'
            size_hint_y: None
            height: 50
            on_release: app.root.current = 'preparer'

<Preparer>:
    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'Preparo'
                    on_release: app.root.current = 'menu'
                    app_icon: 'images/vegaicon.png'
        BoxLayout:
            orientation: 'vertical'
            padding: 90
            spacing: 25
            Image: 
                source: 'images/vegalogo.png'
                size_hint_y: None
                height: 200
            Label:
                size_hint_y: None
                height: 100          
                text: 'Instruções:\n1º Prepare o Foguete na Base de Lançamentos\n2º Insira o valor do peso do Foguete no campo de Input, abaixo\n3º Clique em Ok!'
            Label:
                text: 'Insira o peso do Foguete:'
            TextInput:
                id: value_weight
                size_hint_y: None
                height: 50
            Button:
                size_hint_y: None
                height: 50
                text: 'Ok'
                on_release: app.root.current = 'dashboard'


