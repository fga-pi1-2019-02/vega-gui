<Manager>:
    Menu:
        name: 'menu'
    Preparer:
        name: 'preparer'
    Dashboard:
        name: 'dashboard'

<Menu>:
    BoxLayout:
        width: 1000
        orientation: 'vertical'
        padding: 100
        spacing: 50
        Image: 
            source: 'images/vegalogo.png'
            size_hint_y: None
            height: 200
        Label:
            text: 'Bem Vindo ao Software de Gerenciamento da Base de Lançamentos da Capital Rocket Team!'
        Button:
            text: 'Iniciar'
            size_hint_y: None
            height: 50
            on_release: app.root.current = 'preparer'

<Preparer>:
    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'Preparo'
                    on_release: app.root.current = 'menu'
                    app_icon: 'images/vegaicon.png'
        BoxLayout:
            orientation: 'vertical'
            padding: 90
            spacing: 25
            Image: 
                source: 'images/vegalogo.png'
                size_hint_y: None
                height: 200
            Label:
                size_hint_y: None
                height: 100          
                text: 'Instruções:\n1º Prepare o Foguete na Base de Lançamentos\n2º Insira a quantidade de combustível no campo de Input, abaixo\n3º Clique em Ok!'
            Label:
                text: 'Insira a Quantidade de Combustível:'
            TextInput:
                id: value_weight
                size_hint_y: None
                height: 50
            Button:
                size_hint_y: None
                height: 50
                text: 'Ok'
                on_release:
                    app.root.current = 'dashboard'
                    root.set_value_weight()

<PlotGraphs>:
    BoxLayout:
        orientation: 'horizontal'
        space: 50
        Graph:
            id: graph
            xlabel: 'Tempo'
            ylabel: 'Volume'
            x_grid_label: True
            y_grid_label: True
            x_ticks_major: 10
            y_ticks_major: 1
            xmin: 0
            xmax: 100
            ymin: 0
            ymax: 15
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: None
            padding: 50
            width: 10
            spacing: 50
            size_hint_y: None
            height:450
            pos_hint: {'top': 1}

            Button:
                text: 'Start'
                size_hint_x: None
                width: 150
                size_hint_y: None
                height: 100
                on_release: root.start()
            Button:
                text: 'Stop'
                size_hint_x: None
                width: 150
                size_hint_y: None
                height: 100
                on_release: root.stop()
            Button:
                text: 'Ignitar o Foguete'
                size_hint_x: None
                width: 150
                size_hint_y: None
                height: 100
                on_release: root.ignit()

<PanelTable>:
    do_default_tab: False
    size_hint_x: None
    width: 700
    TabbedPanelItem:
        text: 'Combustível'
        PlotGraphs:
            size_hint_x: None
            width: 700
    TabbedPanelItem:
        text: 'Giroscópio'


<Dashboard>:
    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'Dashboard'
                    on_release: app.root.current = 'preparer'
                    app_icon: 'images/vegaicon.png'
        BoxLayout:
            orientation: 'horizontal'
            # PlotGraphs:
            #     size_hint_x: None
            #     width: 700
            PanelTable:
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: None
                padding: 40
                spacing: 50
                # Button:
                #     text: 'Start'
                #     size_hint_x: None
